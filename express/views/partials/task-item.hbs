
<div class="d-flex task py-2 my-1 {{ completed }} prio-{{#toLower}}{{ task.prio }}{{/toLower}}">
  <div class="task-complete mr-3">
    <form method="post" action="/complete/{{ task._id}}">
      <button class="btn toggle-complete rounded-circle" type="submit"></button>
    </form>
  </div>
  <div class="task-body">
    <div class="task-text">
      {{ task.task }}
    </div>
    <div class="task-footer d-none">
      <a href="/update/{{ task._id }}" class="btn btn-link">Update</a>
      <form method="post" action="/delete/{{ task._id}}">
        <button class="btn btn-link" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>
