
{{#each errors}}
  <div class="alert alert-danger">{{ this.msg }}</div>
{{/each}}

{{#each success}}
  <div class="alert alert-success">{{ this.msg }}</div>
{{/each}}

<h2>ToDo</h2>
{{#each uncompleted}}
  <div class="card">
    <div class="card-body">
      {{ this.task }}
      {{ this.prio }}
      <a href="/update/{{ this._id }}"><button class="btn btn-primary">Update</button></a>
      <form method="post" action="/delete/{{ this._id}}">
        <button class="btn btn-danger" type="submit">X</button>
      </form>
      <form method="post" action="/complete/{{ this._id}}">
        <button class="btn btn-success" type="submit">Complete</button>
      </form>
    </div>
  </div>
{{/each}}

<h2>Completed</h2>
{{#each completed}}
  <div class="card">
    <div class="card-body">
      {{ this.task }}
      {{ this.prio }}
      <a href="/update/{{ this._id }}"><button class="btn btn-primary">Update</button></a>
      <form method="post" action="/delete/{{ this._id}}">
        <button class="btn btn-danger" type="submit">X</button>
      </form>
      <form method="post" action="/complete/{{ this._id}}">
        <button class="btn btn-success" type="submit">Uncomplete</button>
      </form>
    </div>
  </div>
{{/each}}

<form action="/insert" method="post">
  <div class="input form-group">
    <label for="email">Task</label>
    <input class="form-control" type="text" name="task" id="task">
  </div>
  <div class="form-group">
    <label for="prio">Prio</label>
    <select class="form-control" name="prio" id="prio">
      <option>Low</option>
      <option>Medium</option>
      <option>High</option>
    </select>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
