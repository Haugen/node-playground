
{{#each errors}}
  <div class="alert alert-danger">{{ this.msg }}</div>
{{/each}}

{{#each success}}
  <div class="alert alert-success">{{ this.msg }}</div>
{{/each}}

{{#each uncompleted}}
<div class="row task mb-3 prio-{{ this.prio }}">
  <div class="task-complete col-3">
    <form method="post" action="/complete/{{ this._id}}">
      <button class="btn btn-success" type="submit">Complete</button>
    </form>
  </div>
  <div class="task-body col-9">
    <div class="task-text">
      {{ this.task }}
    </div>
    <div class="task-footer d-flex">
      <a href="/update/{{ this._id }}" class="btn btn-link">Update</a>
      <form method="post" action="/delete/{{ this._id}}">
        <button class="btn btn-link" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>
{{/each}}

<hr />

{{#each completed}}
<div class="row task mb-3 prio-{{ this.prio }}">
  <div class="task-complete col-3">
    <form method="post" action="/complete/{{ this._id}}">
      <button class="btn btn-success" type="submit">Uncomplete</button>
    </form>
  </div>
  <div class="task-body col-9">
    <div class="task-text">
      {{ this.task }}
    </div>
    <div class="task-footer d-flex">
      <a href="/update/{{ this._id }}" class="btn btn-link">Update</a>
      <form method="post" action="/delete/{{ this._id}}">
        <button class="btn btn-link" type="submit">Delete</button>
      </form>
    </div>
  </div>
</div>
{{/each}}

<form action="/insert" method="post">
  <div class="input form-group">
    <label for="email">Task</label>
    <input class="form-control" type="text" name="task" id="task">
  </div>
  <div class="form-group">
    <label for="prio">Prio</label>
    <select class="form-control" name="prio" id="prio">
      <option>Low</option>
      <option>Medium</option>
      <option>High</option>
    </select>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
